@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p id="current-count" role="status">Current count: @currentCount</p>

<button class="btn btn-primary" id="increment-count" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
